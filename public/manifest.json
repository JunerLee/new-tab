{
  "manifest_version": 3,
  "name": "Modern New Tab",
  "version": "1.0.0",
  "description": "A modern, customizable new tab page with beautiful backgrounds and useful features",
  "author": {
    "email": "your.email@example.com"
  },
  "homepage_url": "https://github.com/your-username/new-tab-extension",
  "permissions": [
    "storage",
    "topSites"
  ],
  "optional_permissions": [
    "tabs",
    "favicon"
  ],
  "host_permissions": [
    "https://www.bing.com/*",
    "https://api.openweathermap.org/*"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Modern New Tab Settings"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://www.bing.com https://api.openweathermap.org https:; img-src 'self' https: data: blob:; style-src 'self' 'unsafe-inline';"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "minimum_chrome_version": "88",
  "offline_enabled": true,
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}